\frametitle{<<$s.Title | style>>}
<<if $s.Elem>>
<<range $s.Elem>><<elem $.Template .>><<end>>
<<else>>
<<end>>
\end{frame}
<<end>><</* of Slide block */>>
\end{document}
<<end>>

